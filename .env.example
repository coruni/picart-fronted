# ============================================
# Nuxt Runtime Config - 私有配置（仅服务端）
# 使用 NUXT_ 前缀
# ============================================
NUXT_API_SECRET=your-api-secret-token

# ============================================
# Nuxt Runtime Config - 公共配置（客户端+服务端）
# 使用 NUXT_PUBLIC_ 前缀
# ============================================
NUXT_PUBLIC_API_BASE_URL=
NUXT_PUBLIC_APP_NAME=PicArt
NUXT_PUBLIC_APP_VERSION=1.0.1
NUXT_PUBLIC_TINYMCE_LICENSE_KEY=gpl

# ============================================
# 站点配置（Nuxt SEO 模块）
# 使用 NUXT_SITE_ 前缀
# ============================================
NUXT_SITE_URL=https://www.example.com
NUXT_SITE_NAME=PicArt
NUXT_SITE_DESCRIPTION=图片分享社区
NUXT_SITE_DEFAULT_LOCALE=zh

# ============================================
# Microsoft Clarity 配置（Nuxt Scripts 模块）
# 使用 NUXT_PUBLIC_SCRIPTS_ 前缀
# ============================================
NUXT_PUBLIC_SCRIPTS_CLARITY_ID=your-clarity-id

# ============================================
# Nitro 配置
# ============================================
NITRO_PRESET=node_cluster

# ============================================
# 开发配置
# ============================================
NODE_ENV=development
NUXT_DEVTOOLS_ENABLED=true